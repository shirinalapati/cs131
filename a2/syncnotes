LOCAL_DIR = "${1:-~/Notes}"
CLOUD_DIR="${2:-~/GoogleDrive/Notes}"
if [ ! -d "$LOCAL_DIR" ]; then
echo "Error: Local directory '$LOCAL_DIR' does not exist!"
  exit 1
fi

if [ ! -d "$CLOUD_DIR" ]; then
  echo "Error: Cloud directory '$CLOUD_DIR' does not exist!"
  exit 1
fi

# Sync the notes to the cloud using rsync
rsync -av "$LOCAL_DIR/" "$CLOUD_DIR/"
echo "Notes synced successfully!"
